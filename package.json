{
  "name": "project-1",
  "displayName": "project-1",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:project1.run_cpp"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "project-1.helloWorld",
      "title": "Hello World"
    },
    {
      "command": "project1.run_cpp",
      "title": "Run C++ Code",
      "icon" :{
        "dark": "./play-button.png",
        "light": "./play-button.png"
      }
    }],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == cpp",
          "command": "project1.run_cpp",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "cpp",
        "extensions": [
          ".c",
          ".cpp"
        ]
      }
    ],
    "configuration":[
      {
        "title": "Run CPP Code",
        "type" : "object",
        "properties": {
          "cmdExecution" : {
            "type":"object",
            "default": "gcc ${fileBasename} -o ${fileBasenameNoExtension}"
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
